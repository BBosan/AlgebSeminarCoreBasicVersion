@model SeminarCore2.Models.Seminar

@{
    ViewData["Title"] = "Delete";
    string StatusDaNe(bool? status, bool statusText = false)
    {
        string output = "";

        if (statusText)
        {
            output = (status == false ? "Otvoren" : "Zatvoren");
        }
        else
        {
            output = (status == false ? "color:royalblue" : "color:crimson");
        }
        return output;
    }
}

<h1>Delete</h1>

<p class="text-danger">@ViewData["ErrorMessage"]</p>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Seminar</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Naziv)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Naziv)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Opis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Opis)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Datum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Datum)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PopunjenDaNe)
        </dt>
        <dd class="col-sm-10">
            <span style=@(StatusDaNe(Model.PopunjenDaNe))>
                @(StatusDaNe(Model.PopunjenDaNe, statusText: true))
            </span>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SeminarID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
